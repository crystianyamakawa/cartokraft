<table id="datatable" class="mdl-data-table" cellspacing="0" width="100%">
        <thead>
            <tr>
              <th>Cliente</th>
              <th class="center">Valor Entrega</th>
              <th class="center">Status</th>
              <th class="center">Data Entrega</th>
              <th class="center">Ações</th>
            </tr>
        </thead>

        <tbody>
          <% @entregas.each do |entrega| %>
            <tr>
              <td><%= entrega.cliente.try(:name) %></td>
              <td class="center" ><%= entrega.vl_total %></td>
              <td class="center"><%= entrega.status %></td>
              <td class="center"><%= entrega.dt_entrega.try(:strftime, "%d/%m/%Y") %></td>
              <td class="center">
                  <%= link_to 'Mostrar', entrega %>
                  <%= link_to 'Editar', edit_entrega_path(entrega) %>
                  <%= link_to 'Eliminar', entrega, method: :delete, data: { confirm: 'Confirma a Exclusão?' } %></td>
            </tr>
          <% end %>
        </tbody>
    </table>



