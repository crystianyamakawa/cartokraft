<p id="notice"><%= notice %></p>

<h1>Faturamentos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Dt fechamento</th>
      <th>Vl vendas</th>
      <th>Vl custo</th>
      <th>Vl bruto</th>
      <th>Vl despesa</th>
      <th>Vl liquido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faturamentos.each do |faturamento| %>
      <tr>
        <td><%= faturamento.dt_fechamento %></td>
        <td><%= number_with_precision(faturamento.vl_vendas , precision: 2) %></td>
        <td><%= number_with_precision(faturamento.vl_custo , precision: 2) %></td>
        <td><%= number_with_precision(faturamento.vl_bruto , precision: 2) %></td>
        <td><%= number_with_precision(faturamento.vl_despesa , precision: 2)%></td>
        <td><%= number_with_precision(faturamento.vl_liquido , precision: 2) %></td>
        <td><%= link_to 'Mostrar', faturamento %></td>
        <td><%= link_to 'Editar', edit_faturamento_path(faturamento) %></td>
        <td><%= link_to 'Excluir', faturamento, method: :delete, data: { confirm: 'Confirma ExclusÃ£o?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

